{
  "name": "@iot-platform/backend",
  "version": "2.9.0",
  "description": "IoT Platform Backend - Node.js/TypeScript API server",
  "author": "Fountain IoT Platform Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='-r tsconfig-paths/register' tsx watch --tsconfig tsconfig.json src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node --enable-source-maps dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='__tests__/modules'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:e2e": "jest --testPathPattern='__tests__/e2e'",
    "test:env:start": "./scripts/start-test-env.sh",
    "test:env:stop": "docker-compose -f docker-compose.test.yml down",
    "clean": "rm -rf dist",
    "prepare": "prisma generate",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/compress": "^6.3.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/formbody": "^7.0.0",
    "@fastify/helmet": "^11.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^8.3.0",
    "@prisma/client": "^5.0.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.0",
    "fastify": "^4.24.0",
    "ioredis": "^5.3.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "mqtt": "^5.0.0",
    "pg": "^8.11.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prisma": "^5.0.0",
    "ts-jest": "^29.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}