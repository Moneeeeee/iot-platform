{
  "name": "iot-platform-backend",
  "version": "1.0.0",
  "description": "IoT设备管理平台后端服务",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "npm run generate",
    "start": "node -r tsconfig-paths/register -r ts-node/register/transpile-only src/index.ts",
    "start:simple": "node -r tsconfig-paths/register -r ts-node/register scripts/debug/start-simple.js",
    "start:debug": "node -r tsconfig-paths/register -r ts-node/register scripts/debug/debug-server.ts",
    "start:step": "node -r tsconfig-paths/register -r ts-node/register scripts/debug/step-by-step-server.ts",
    "start:db": "node -r tsconfig-paths/register -r ts-node/register scripts/debug/db-test-server.ts",
    "start:minimal": "node -r tsconfig-paths/register -r ts-node/register scripts/debug/minimal-db-server.ts",
    "start:migrate": "node -r tsconfig-paths/register -r ts-node/register src/migrate-and-start.ts",
    "start:prod": "NODE_ENV=production npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "test:db": "node scripts/test/test-db.js",
    "demo:users": "node scripts/demo/create-demo-users.js",
    "db:studio": "npx prisma studio",
    "clean": "rm -rf dist node_modules/.cache",
    "docker:build": "docker build -t iot-platform-backend .",
    "docker:run": "docker run -p 8000:8000 iot-platform-backend"
  },
  "keywords": [
    "iot",
    "mqtt",
    "websocket",
    "express",
    "typescript"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mqtt": "^5.3.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.7.1",
    "redis": "^4.6.12",
    "socket.io": "^4.7.4",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
