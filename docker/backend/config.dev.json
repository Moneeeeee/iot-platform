{
  "server": {
    "port": 8000,
    "host": "0.0.0.0",
    "cors": {
      "origin": ["http://localhost:3000", "http://localhost:3001"],
      "credentials": true
    }
  },
  "database": {
    "url": "postgresql://iot_user:iot_password@postgres:5432/iot_platform_dev",
    "pool": {
      "min": 1,
      "max": 5
    }
  },
  "redis": {
    "url": "redis://redis:6379",
    "retryDelayOnFailover": 100,
    "maxRetriesPerRequest": 3
  },
  "mqtt": {
    "broker": "mqtt://emqx:1883",
    "options": {
      "clientId": "iot-backend-dev",
      "keepalive": 60,
      "reconnectPeriod": 5000,
      "connectTimeout": 30000
    }
  },
  "jwt": {
    "secret": "dev-secret-key-not-for-production",
    "expiresIn": "24h",
    "algorithm": "HS256"
  },
  "rateLimit": {
    "windowMs": 900000,
    "maxRequests": 1000,
    "skipSuccessfulRequests": false
  },
  "logging": {
    "level": "debug",
    "format": "combined",
    "file": {
      "enabled": true,
      "filename": "logs/combined-dev.log",
      "maxSize": "10m",
      "maxFiles": 3
    },
    "error": {
      "enabled": true,
      "filename": "logs/error-dev.log",
      "maxSize": "10m",
      "maxFiles": 3
    }
  },
  "security": {
    "bcryptRounds": 8,
    "sessionSecret": "dev-session-secret"
  },
  "features": {
    "registration": true,
    "emailVerification": false,
    "passwordReset": true,
    "twoFactorAuth": false
  },
  "alerts": {
    "enabled": true,
    "checkInterval": 10000,
    "retentionDays": 7
  },
  "healthCheck": {
    "enabled": true,
    "interval": 15000,
    "timeout": 5000
  }
}
